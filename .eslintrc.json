{
  "$schema": "http://json.schemastore.org/eslintrc",
  "env": {
    "node": true,
    "es6": true
  },
  "plugins": ["prettier"],
  "extends": ["eslint:recommended", "prettier"],
  "rules": {
    "prettier/prettier": [
      "error",
      {
        "semi": false,
        "singleQuote": true,
        "arrowParens": "avoid"
      }
    ]
  }
}
